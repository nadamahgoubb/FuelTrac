<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.mrina.home.Home">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/image_description" />
        <TextView
            android:id="@+id/land_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_offwhite"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/switch_to_arabic"
            android:textColor="@color/blue"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_lang"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/rounded_light_blue"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_subscribers"
                    android:layout_marginRight="@dimen/_10sdp"
                    tools:ignore="ContentDescription,NestedWeights" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="@string/subscribers"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/rounded_light_blue"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_fleet"
                    android:layout_marginRight="@dimen/_10sdp"
                    tools:ignore="ContentDescription,NestedWeights" />

                <TextView
                    android:id="@+id/Fleet"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="@string/fleet"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/rounded_light_blue"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_emergancies"
                    android:layout_marginRight="@dimen/_10sdp"
                    tools:ignore="ContentDescription,NestedWeights" />

                <TextView
                    android:id="@+id/Emergencies"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="@string/emergencies"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp" />

            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>