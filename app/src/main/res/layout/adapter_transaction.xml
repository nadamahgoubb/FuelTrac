<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="transaction"
            type="com.fueltrac.model.entities.TransactionModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transaction_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="@string/finish_fueling"
            android:background="@drawable/rounded_red"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/white"
            android:elevation="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintBottom_toBottomOf="@id/card"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_height="wrap_content"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:background="@drawable/rouned_bottom"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_bus_tranc"
                    android:layout_marginLeft="@dimen/_20sdp" />
                <LinearLayout
                    android:id="@+id/row1_headers"
                    app:layout_constraintTop_toBottomOf="@+id/image"
                    app:layout_constraintStart_toStartOf="@+id/image"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@string/bump_number"
                        android:textColor="@color/gray0"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@string/plate_number"
                        android:textColor="@color/gray0"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/row1_data"
                    app:layout_constraintTop_toBottomOf="@+id/row1_headers"
                    app:layout_constraintStart_toStartOf="@+id/image"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/bump_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@{String.valueOf(transaction.pumpNumber)}"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/plate_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@{transaction.plateNumber}"
                        android:textColor="@color/blue"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/row2_headers"
                    app:layout_constraintTop_toBottomOf="@+id/row1_data"
                    app:layout_constraintStart_toStartOf="@+id/image"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@string/type"
                        android:textColor="@color/gray0"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@string/department"
                        android:textColor="@color/gray0"
                        />
                </LinearLayout>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/row2_headers"
                    app:layout_constraintStart_toStartOf="@+id/image"
                    android:layout_width="0dp"

                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@{transaction.type}"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/department"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="@dimen/normal_text"
                        android:text="@{transaction.department}"
                        android:textColor="@color/blue"
                        />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>