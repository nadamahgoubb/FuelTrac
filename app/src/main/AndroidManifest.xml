<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fueltrac">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FuelTrac"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.activities.pay.Pay"></activity>
        <activity android:name=".view.activities.mrina.search.SearchMarina" />
        <activity
            android:name=".view.activities.supervisor.FilterResult"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".view.activities.supervisor.FilterActivity" />
        <activity android:name=".view.activities.supervisor.SupervisorActivity" />
        <activity
            android:name=".view.activities.vehicle_data.VehicleData"
            android:theme="@style/Theme.FuelTrac.BlueStatusBar" />
        <activity android:name=".view.activities.home.HomePage" />
        <activity
            android:name=".view.activities.login.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.FuelTrac.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.login.LoginActivity" />
        <activity android:name=".view.activities.MrinaTest"/>
    </application>

</manifest>